<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/abc"
    android:orientation="vertical">

    <TextView
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:fontFamily="serif"
        android:text="Personal Info"
        android:textAlignment="center"
        android:textSize="35dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How would you like to be addressed?"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="serif"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="serif"
        android:text="Title"
        android:textColor="#000000"
        android:textSize="25dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/Mr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mr."
            android:fontFamily="serif"
            android:textSize="16dp"
            android:clickable="true"

            android:textColor="#000000"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/Mrs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:textColor="#000000"
            android:textSize="16dp"
            android:clickable="true"
            android:text="Mrs."
            android:fontFamily="serif"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/Ms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textSize="16dp"
            android:clickable="true"
            android:textStyle="bold"

            android:text="Ms."
            android:fontFamily="serif"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/Other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:clickable="true"
            android:layout_marginLeft="19dp"
            android:text="Others."
            android:textStyle="bold"
            android:fontFamily="serif"
            android:textColor="#000000"

            />


    </LinearLayout>

    <EditText
        android:id="@+id/FirstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="First Name"
        android:layout_marginTop="20dp"
        android:fontFamily="serif"
        android:textColor="#000000"

        android:textColorHint="#000000"/>

    <EditText
        android:id="@+id/lastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Last Name"
        android:layout_marginTop="20dp"
        android:fontFamily="serif"
        android:textColor="#000000"

        android:textColorHint="#000000"

        />

    <EditText
        android:id="@+id/gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Gender"
        android:layout_marginTop="20dp"
        android:fontFamily="serif"
        android:textColorHint="#000000"

        />
    <EditText
        android:id="@+id/country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Country"
        android:fontFamily="serif"
        android:layout_marginTop="20dp"
        android:textColorHint="#000000"
        />

    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="I consent, to the processing of my personal data in accordance with the VistaJet privacy policy, and to the Vista Jet Direct Mobile Program terms and Conditions of Use"
        android:textColor="#000000"></RadioButton>

    <Button
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"

        android:fontFamily="serif"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:background="#92dff3"
        android:textSize="20dp"



        />



</LinearLayout>